# Gruvbox (https://github.com/a-schaefers/i3-wm-gruvbox-theme/blob/master/i3/config)
# + Slight alterations to taste

# set primary gruvbox colorscheme colors
set $bg #1d2021
set $fg #ebdbb2
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d68
set $gray #a89984

# class                 border|backgr|text|indicator|child_border
client.focused          $gray $aqua $bg $aqua $gray
client.focused_inactive $gray $bg $fg $bg $gray
client.unfocused        $gray $bg $fg $bg $gray
client.urgent $purple $purple $fg $purple $purple

#start of bar section
bar {
    position bottom
    status_command i3status
    colors {
        # bar background color
        background $bg
        # text color used for blocks that do not have a color specified.
        statusline $fg
        # workspaces section            
        #                    border  backgr. text
        focused_workspace    $aqua $aqua $bg
        inactive_workspace   $bg $bg $fg
        active_workspace     $bg $bg $fg
        urgent_workspace     $purple $purple $bg
    }
}

# Use feh to set a Desktop Background
exec --no-startup-id [ -e ~/Pictures/Desktop.png ] && feh --bg-scale ~/Pictures/Desktop.png
